# ==========================================
# üîß SERVER CONFIGURATION
# ==========================================

# Port Configuration
AUTH_SERVER_PORT=3002
ACTIVITY_SERVER_PORT=3001
FRONTEND_PORT=5173

# Server Host Configuration
SERVER_HOST=localhost
FRONTEND_HOST=localhost

# Environment
# Development: Set ke 'development' untuk local development
# Production: Set ke 'production' untuk website publish
NODE_ENV=development

# ==========================================
# üîê AUTHENTICATION CONFIGURATION
# ==========================================

# JWT Secret for Authentication
# Generate a secure random string for production
JWT_SECRET=your-secret-key-change-this-in-production

# Cookie Configuration
# Development: false, Production: true
COOKIE_SECURE=false
COOKIE_DOMAIN=
COOKIE_SAME_SITE=lax

# Auto-approved Admin Emails
# Comma-separated list of emails that will be automatically approved as admins on signup
ADMIN_EMAILS=admin1@kemenkopmk.go.id,admin2@kemenkopmk.go.id

# ==========================================
# üåê API & URL CONFIGURATION
# ==========================================

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (untuk server-side operations dan scripts)
# PENTING: Jangan expose key ini di frontend!
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Auth Server Configuration
VITE_AUTH_SERVER_URL=http://localhost:3002

# CORS Configuration for Production
# Multiple origins supported (comma-separated)
CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173

# ==========================================
# ü§ñ AI CONFIGURATION
# ==========================================

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_GEMINI_MODEL=gemini-1.5-flash
VITE_GEMINI_FALLBACK_MODELS=gemini-1.5-pro,gemini-pro
VITE_GEMINI_TIMEOUT_MS=30000

# ==========================================
# üìÅ FILE UPLOAD CONFIGURATION
# ==========================================

# Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Upload Directory Configuration
UPLOAD_DIR=activity_uploads
METADATA_FILE=activity_attachments.json
