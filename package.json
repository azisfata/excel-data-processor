{
  "name": "sapa-ai-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm:api:local\" \"npm:auth:local\" \"npm:dev:client:local\"",
    "dev:client": "vite --mode development",
    "dev:local": "concurrently -k \"npm:api:local\" \"npm:auth:local\" \"npm:dev:client:local\"",
    "dev:client:local": "vite --mode development",
    "dev:old": "concurrently -k \"npm:api\" \"npm:auth\" \"npm:dev:client\"",
    "build": "vite build --mode production",
    "build:local": "vite build --mode development",
    "preview": "vite preview",
    "api": "node server/activity-upload-server.js",
    "auth": "node server/auth-server.js",
    "api:local": "node -r dotenv/config server/activity-upload-server.js dotenv_config_path=.env.loc",
    "auth:local": "node -r dotenv/config server/auth-server.js dotenv_config_path=.env.loc",
    "api:prod": "node -r dotenv/config server/activity-upload-server.js dotenv_config_path=.env.prod",
    "auth:prod": "node -r dotenv/config server/auth-server.js dotenv_config_path=.env.prod",
    "create-admin": "node scripts/create-admin.js",
    "check-env": "node scripts/check-env.js",
    "start": "./start-production.sh",
    "start:prod": "npm run api:prod & npm run auth:prod",
    "stop": "./stop-production.sh",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:restart": "pm2 restart all",
    "pm2:stop": "pm2 stop all",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate": "npm run lint:fix && npm run format:check"
  },
  "dependencies": {
    "@google/genai": "^1.24.0",
    "@supabase/supabase-js": "^2.54.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.21.1",
    "jsdom": "^27.0.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "jszip": "^3.10.1",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "pdfjs-dist": "^5.4.296",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-router-dom": "^7.9.4",
    "readline": "^1.3.0",
    "tesseract.js": "^6.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.8",
    "@types/web": "^0.0.282",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
